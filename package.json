{
  "name": "StaticGo",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "zhouzhijun",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "dist": "pnpm run build:vite && cross-env NODE_ENV=production electron-builder --win --x64 --publish=never",
    "build:vite": "cd html && pnpm run build",
    "dev:vite": "cd html && pnpm run dev",
    "dev": "concurrently \"pnpm run dev:vite\" \"wait-on http://localhost:5173 && pnpm run start\""
  },
  "build": {
    "appId": "com.example.html-exe",
    "productName": "StaticGo",
    "directories": {
      "output": "go"
    },
    "files": [
      "main.js",
      "html/dist/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "StaticGo.ico",
      "artifactName": "${productName}.exe"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}